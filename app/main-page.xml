            <GridLayout rows="auto,*" columns="*">
                <SearchBar row="0" hint="Search for a cryptocurrency" clear="{{onClear}}" submit="{{onSubmit}}"/>
                <lv:RadListView row="1" items="{{coinsList}}" id="listview" class="list-group" style="background-color: lightgray;"> 
                    <lv:RadListView.listViewLayout>
                        <lv:ListViewLinearLayout scrollDirection="Vertical"/>
                    </lv:RadListView.listViewLayout>
                    <lv:RadListView.itemTemplate>
                        <GridLayout horizontalAlignment="stretch" rows="*,*,*,*" columns="*,*,*,*,*"  style="margin-left: 10px; padding-left: 20px;">
                            <Label row="0" col="0" colSpan="4" text="{{ name }}" textWrap="true" class="list-group-item-text" style="font-size: 20; font-weight: bold"/>
                            <Label row="1" col="0" colSpan="2" text="{{ symbol }}" class="list-group-item-heading" />
                            <Image row="0" col="4" src="~/assets/images/star-24px.png" stretch="aspect"  coin="{{symbol}}" tap="onTapStar" 
                            style="margin-top: 20px; padding-right:30px;"
                            visibility="{{ !isFavorite ? 'visible' : 'collapsed' }}" />
                            <Image row="0" col="4" src="~/assets/images/lace-24px.png" stretch="aspect"  coin="{{symbol}}" tap="onTapStar"
                            visibility="{{ isFavorite ? 'visible' : 'collapsed' }}"
                            style="margin-top: 20px; padding-right:30px;" />
                            <Label row="2" col="0" colSpan="3" text="{{ quotes.USD.price }}" textWrap="true" class="list-group-item-text" />
                            <Label row="2" col="1" colSpan="1" text="$" textWrap="true" class="list-group-item-text" />
                        </GridLayout>
                    </lv:RadListView.itemTemplate>
                </lv:RadListView>
            </GridLayout>
        </TabViewItem>
