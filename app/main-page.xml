<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="NS Coin Track" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <TabView id="tabViewContainer">
        <TabViewItem title="Coins">
            <StackLayout>
                <Label text="NativeScript" class="m-15 h2 text-left" color="blue" />
                <ScrollView>
                    <StackLayout height="100%">
                        <Label text="Ivan" textWrap="true" class="m-15" />
                    </StackLayout>
                </ScrollView>
            </StackLayout>
        </TabViewItem>
        <TabViewItem title="Favorite Coins">
            <StackLayout>
                <Image class="m-t-30 m-b-15" src="res://icon" width="80" height="80" />
                <Label text="NativeScript" textWrap="true" class="h2 m-x-auto" color="blue" />
            </StackLayout>
        </TabViewItem>
    </TabView>
</Page>
