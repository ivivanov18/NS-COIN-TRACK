<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:lv="nativescript-ui-listview" navigatingTo="onNavigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="NS Coin Track" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <TabView id="tabViewContainer">
        <TabViewItem title="Coins">
            <lv:RadListView items="{{coinsList}}" id="listview" class="list-group"> 
                <lv:RadListView.listViewLayout>
                    <lv:ListViewGridLayout scrollDirection="Vertical" itemHeight="200" spanCount="2"/>                
                </lv:RadListView.listViewLayout>
                <lv:RadListView.itemTemplate>
                    <GridLayout rows="*,*,*,*,*" columns="*,*,*" style="padding-left: 20px;">
                        <Label row="0" col="0" text="{{ coinSign }}" class="list-group-item-heading" />
                        <Label row="1" col="0" colSpan="2" text="{{ coinName }}" textWrap="true" class="list-group-item-text" />
                        <Image row="0" col="3" src="~/assets/images/star-16px.png" stretch="aspect"  coin="{{coinSign}}" tap="{{onTapStar}}" 
                        style="margin-top: 20px; padding-right:30px;"
                        visibility="{{ !isFavorite ? 'visible' : 'collapsed' }}" />
                        <Image row="0" col="3" src="~/assets/images/lace-16px.png" stretch="aspect"  coin="{{coinSign}}" tap="{{onTapStar}}"
                        visibility="{{ isFavorite ? 'visible' : 'collapsed' }}"
                        style="margin-top: 20px; padding-right:30px;" />
                    </GridLayout>
                </lv:RadListView.itemTemplate>
            </lv:RadListView>
        </TabViewItem>
        <TabViewItem title="Favorite Coins">
            <!-- <lv:RadListView items="{{favoriteCoinsList}}" id="favListview" class="list-group"> 
                <lv:RadListView.listViewLayout>
                    <lv:ListViewGridLayout scrollDirection="Vertical" itemHeight="170" spanCount="2"/>                
                </lv:RadListView.listViewLayout>
                <lv:RadListView.itemTemplate>
                    <StackLayout class="list-group-item" >
                        <Image src="~/assets/images/lace-512px.png" stretch="none" height="64" width="64"/>
                        <Label text="{{ coinSign }}" class="list-group-item-heading" />
                        <Label text="{{ coinName }}" textWrap="true" class="list-group-item-text" />
                    </StackLayout>
                </lv:RadListView.itemTemplate>
            </lv:RadListView> -->
            <ListView row="0" items="{{ favoriteCoinsList }}" class="list-group">
                <ListView.itemTemplate>
                    <StackLayout class="list-group-item">
                        <Label text="{{ coinSign }}" class="list-group-item-heading" />
                        <Label text="{{ coinName }}" textWrap="true" class="list-group-item-text" />
                    </StackLayout>
                </ListView.itemTemplate>
            </ListView>
        </TabViewItem>
    </TabView>
</Page>
