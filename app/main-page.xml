            <GridLayout rows="auto,*" columns="*">
                <SearchBar row="0" hint="Search for a cryptocurrency" clear="{{onClear}}" submit="{{onSubmit}}"/>
                <lv:RadListView row="1" items="{{coinsList}}" id="listview" class="list-group" style="background-color: lightgray;"> 
                    <lv:RadListView.listViewLayout>
                        <lv:ListViewLinearLayout scrollDirection="Vertical"/>
                    </lv:RadListView.listViewLayout>
                    <lv:RadListView.itemTemplate>
                        <GridLayout horizontalAlignment="stretch" rows="36,*,*,*" itemHeight="200px" columns="*,*,auto,*,22"  style="margin-left: 10px; padding-left: 20px; border-bottom-width: 0.5px; background-color: #000; color: #FFF;">
                            <Label row="0" col="0" colSpan="4" text="{{ name }}" textWrap="true" class="list-group-item-text" style="font-size: 26; font-weight: bold"/>
                            <Label row="1" col="0"  text="{{ symbol }}"   style=" font-size: 18;"    class="list-group-item-heading" />
                            <Label row="1" rowSpan="2" col="2" text="$" style="font-weight: bold; font-size: 20;" textWrap="true" class="list-group-item-text" />
                            <Label row="1" rowSpan="2" colSpan="2" col="3" text="{{ quotes.USD.price | floatRounding() }}" style="font-size: 22; font-weight: bold; color: #2B74F6" textWrap="true" class="list-group-item-text" />
                            
                            <Image row="0" col="4" src="~/assets/images/star.png" stretch="aspect"  coin="{{symbol}}" tap="{{onTapStar}}" 
                            style="margin-top: 20px; background-color: #000"
                            visibility="{{ !isFavorite ? 'visible' : 'collapsed' }}" />
                            <Image row="0" col="4" src="~/assets/images/starfav.png" stretch="aspect"  coin="{{symbol}}" tap="{{onTapStar}}"
                            visibility="{{ isFavorite ? 'visible' : 'collapsed' }}"
                            style="margin-top: 20px; background-color: #000;" />
                            <Label row="3" col="0" colSpan="3" text="% change in 1 day" class="list-group-item-text" />
                            <Label row="3" col="3" text="{{ quotes.USD.percent_change_24h }}" color="red" textWrap="true" class="list-group-item-text" />
                        </GridLayout>
                    </lv:RadListView.itemTemplate>
                </lv:RadListView>
            </GridLayout>
        </TabViewItem>
        <TabViewItem title="Favorite Coins List" iconSource= '~/assets/images/favorite20px.png'>
