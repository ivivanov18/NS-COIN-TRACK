<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:lv="nativescript-ui-listview" navigatingTo="onNavigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="NS Coin Track" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <TabView id="tabViewContainer">
        <TabViewItem title="Coins">
             <lv:RadListView items="{{coins}}" id="listview" class="list-group"> 
                <lv:RadListView.listViewLayout>
                    <lv:ListViewGridLayout scrollDirection="Vertical" itemHeight="170" spanCount="2"/>                
                </lv:RadListView.listViewLayout>
                <lv:RadListView.itemTemplate>
                    <StackLayout class="list-group-item" tap="addFavorite">
                        <Label text="{{ coinSign }}" class="list-group-item-heading" />
                        <Label text="{{ coinName }}" textWrap="true" class="list-group-item-text" />
                    </StackLayout>
                </lv:RadListView.itemTemplate>
            </lv:RadListView>
        </TabViewItem>
        <TabViewItem title="Favorite Coins">
            <StackLayout>
                <Image class="m-t-30 m-b-15" src="res://icon" width="80" height="80" />
                <Label text="NativeScript" textWrap="true" class="h2 m-x-auto" color="blue" />
            </StackLayout>
        </TabViewItem>
    </TabView>
</Page>
